{
  "manifest_version": 3,
  "name": "DOM to Image",
  "description": "Render selected DOM element into an image or PDF.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.ico",
      "48": "images/icon48.ico",
      "128": "images/icon128.ico"
    }
  }
}