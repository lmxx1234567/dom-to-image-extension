{
    "manifest_version": 3,
    "name": "DOM to Image",
    "description": "Render selected DOM element into an image or PDF.",
    "version": "1.0",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.icon",
        "48": "icon48.icon",
        "128": "icon128.icon"
      }
    },
    "icons": {
      "16": "icon16.icon",
      "48": "icon48.icon",
      "128": "icon128.icon"
    }
  }